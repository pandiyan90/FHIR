<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="FHIRServerIntegrationTests">
    <test name="ExampleTest">
        <!-- All of these tests are automatically executed and are from fhir-examples -->
        <packages>
            <package name="net.sovrinhealth.fhir.server.test.examples" />
        </packages>
    </test>
    <test name="ServerTests">
        <packages>
            <!-- All of these tests are automatically executed -->
            <package name="net.sovrinhealth.fhir.server.test" />
        </packages>
    </test>
    <test name="ProfileTests">
        <packages>
            <!-- All of these tests are automatically executed -->
            <package name="net.sovrinhealth.fhir.server.test.profiles" />
            <package name="net.sovrinhealth.fhir.server.test.profiles.uscore.v311" />
            <package name="net.sovrinhealth.fhir.server.test.profiles.uscore.v400" />
        </packages>
    </test>
    <test name="ClientTests">
        <packages>
            <!-- The first two packages of these tests are automatically executed -->
            <package name="net.sovrinhealth.fhir.cli.test" />
            <package name="net.sovrinhealth.fhir.client.test" />
            <!-- The following packages of these tests are skipped by default, and enabled in test.properties -->
            <package name="net.sovrinhealth.fhir.client.test.oauth" />
        </packages>
    </test>
    <test name="BulkDataTests">
        <packages>
            <!-- All of these Bulk Data tests are skipped by default, and enabled in test.properties -->
            <package name="net.sovrinhealth.fhir.server.test.bulkdata" />
        </packages>
    </test>
    <test name="KafkaTests">
        <packages>
            <!-- All of these Kafka tests are skipped by default, and enabled in test.properties -->
            <package name="net.sovrinhealth.fhir.server.test.kafka" />
        </packages>
    </test>
    <test name="WebsocketTests">
        <packages>
            <!-- All of these websocket tests are enabled by default, and disabled in test.properties -->
            <package name="net.sovrinhealth.fhir.server.test.websocket" />
        </packages>
    </test>
    <test name="PerformanceTests">
        <packages>
            <!-- All of these performance tests are automatically executed and
                 the number of iterations is controlled in test.properties -->
            <package name="net.sovrinhealth.fhir.server.test.performance" />
        </packages>
    </test>
    <test name="TerminologyTests">
        <packages>
            <!-- All of these tests are automatically executed -->
            <package name="net.sovrinhealth.fhir.server.test.terminology" />
        </packages>
    </test>
    <test name="OperationSpecificTests">
        <packages>
            <package name="net.sovrinhealth.fhir.server.test.operation" />
        </packages>
    </test>
    <test name="ClinicalReasoningTests">
        <packages>
            <package name="net.sovrinhealth.fhir.server.test.cpg" />
            <package name="net.sovrinhealth.fhir.server.test.cqf" />
        </packages>
    </test>
    <test name="SmartOnFhirEnabledTests">
        <packages>
            <package name="net.sovrinhealth.fhir.server.test.smart" />
        </packages>
    </test>
</suite>
