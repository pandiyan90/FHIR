{
    "resourceType": "ValueSet",
    "id": "poly",
    "url": "http://example.com/fhir/ValueSet/poly",
    "version": "1.0.0",
    "status": "active",
    "compose": {
        "include": [
            {
                "system": "http://example.com/fhir/CodeSystem/poly",
                "filter": [
                    {
                        "property": "concept",
                        "op": "is-a",
                        "value": "lowercase"
                    }
                ]
            },
            {
                "system": "http://example.com/fhir/CodeSystem/poly-reverse",
                "filter": [
                    {
                        "property": "concept",
                        "op": "is-a",
                        "value": "uppercase"
                    }
                ]
            }
        ]
    }
}